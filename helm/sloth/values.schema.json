{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "commonPlugins": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "gitRepo": {
                    "type": "object",
                    "properties": {
                        "branch": {
                            "type": "string"
                        },
                        "resources": {
                            "type": "object",
                            "properties": {
                                "limits": {
                                    "type": "object",
                                    "properties": {
                                        "cpu": {
                                            "type": "string"
                                        },
                                        "memory": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "requests": {
                                    "type": "object",
                                    "properties": {
                                        "cpu": {
                                            "type": "string"
                                        },
                                        "memory": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        },
                        "url": {
                            "type": "string"
                        }
                    }
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "repository": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "customSloConfig": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "object"
                },
                "enabled": {
                    "type": "boolean"
                },
                "path": {
                    "type": "string"
                }
            }
        },
        "image": {
            "type": "object",
            "properties": {
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "imagePullSecrets": {
            "type": "array"
        },
        "labels": {
            "type": "object"
        },
        "metrics": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "prometheusLabels": {
                    "type": "object"
                }
            }
        },
        "resources": {
            "type": "object",
            "properties": {
                "limits": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                },
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "securityContext": {
            "type": "object",
            "properties": {
                "container": {
                    "type": "null"
                },
                "pod": {
                    "type": "null"
                }
            }
        },
        "sloth": {
            "type": "object",
            "properties": {
                "debug": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "defaultSloPeriod": {
                    "type": "string"
                },
                "extraLabels": {
                    "type": "object"
                },
                "labelSelector": {
                    "type": "string"
                },
                "logger": {
                    "type": "string"
                },
                "namespace": {
                    "type": "string"
                },
                "optimizedRules": {
                    "type": "boolean"
                },
                "resyncInterval": {
                    "type": "string"
                },
                "workers": {
                    "type": "integer"
                }
            }
        }
    }
}
